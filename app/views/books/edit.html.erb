<body>
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <% @book.errors.count %>
      2 errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <%= f.label :Title %>
    <%= f.text_field :title %>

    <%= f.label :Body %>
    <%= f.text_area :body %>

    <br><%= f.submit 'Update Book' %></br>
  <% end %>

  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", '/books' %>
</body>