<body>
  <h1>Books </h1>

  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
      </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
            <td><%= link_to "edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
        <% end %>
    </tbody>
  </table>

  <h2>New book</h2>

  <% if @book.errors.any? %>
    <% @book.errors.count %>
      2 errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <div class="field">
      <%= f.label :Title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <br><%= f.submit 'Create Book' %></br>
  <% end %>
</body>